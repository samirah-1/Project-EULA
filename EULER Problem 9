tripletFound = False
while tripletFound == False:
    for a in range (1,1000):
        for b in range (1,1000):
            c= ((a**2)+(b**2))**0.5
            if int(c) == c and a + b + c == 1000:
                    print ("triplet found",a,",",b,",",c)
                    tripletFound =True
                    break
    if tripletFound:
        break
